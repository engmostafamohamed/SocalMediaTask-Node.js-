<%- include('../partials/header', { 
  title: typeof __ === 'function' ? __('auth.verifyOTP') : 'Verify OTP',
  currentLang: typeof currentLang !== 'undefined' ? currentLang : 'en',
  userHandle: typeof userHandle !== 'undefined' ? userHandle : null
}) %>

<div class="main-content">
  <div class="card-center">
    <div class="card">
      <h1>üîê <%= typeof __ === 'function' ? __('auth.verifyOTP') : 'Verify OTP' %></h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>

      <% if (typeof contact !== 'undefined' && contact) { %>
        <div class="alert alert-info">
          <%= typeof __ === 'function' ? __('auth.checkConsole') : 'OTP sent to' %>: 
          <strong><%= contact %></strong>
        </div>
      <% } %>

      <form action="/auth/login" method="POST" class="form">
        <input type="hidden" name="handle" value="<%= typeof handle !== 'undefined' ? handle : '' %>">
        <input type="hidden" name="contact" value="<%= typeof contact !== 'undefined' ? contact : '' %>">

        <div class="form-group">
          <label><%= typeof __ === 'function' ? __('auth.otp') : '6-Digit OTP' %></label>
          <input type="text" name="code" id="otpInput" required placeholder="123456" maxlength="6">
        </div>

        <button type="submit" class="btn btn-primary">
          <%= typeof __ === 'function' ? __('auth.verifyOTP') : 'Verify & Login' %>
        </button>
      </form>
    </div>
  </div>
</div>

<!-- OTP Modal Popup -->
<% if (typeof otpCode !== 'undefined' && otpCode) { %>
<div id="otpModal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>üîë Your OTP Code</h2>
    <div class="otp-display">
      <h1><%= otpCode %></h1>
    </div>
    <p>This code will expire in 5 minutes</p>
    <button onclick="copyOTP('<%= otpCode %>')" class="btn btn-primary">Copy Code</button>
  </div>
</div>

<script>
  // Show modal on page load
  window.onload = function() {
    const modal = document.getElementById('otpModal');
    modal.style.display = 'block';
    
    // Auto-fill OTP input
    document.getElementById('otpInput').value = '<%= otpCode %>';
  };

  // Close modal when clicking X
  document.querySelector('.close').onclick = function() {
    document.getElementById('otpModal').style.display = 'none';
  };

  // Close modal when clicking outside
  window.onclick = function(event) {
    const modal = document.getElementById('otpModal');
    if (event.target == modal) {
      modal.style.display = 'none';
    }
  };

  // Copy OTP to clipboard
  function copyOTP(code) {
    navigator.clipboard.writeText(code).then(function() {
      alert('OTP copied to clipboard!');
      document.getElementById('otpModal').style.display = 'none';
    });
  }
</script>
<% } %>

<style>
  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    animation: fadeIn 0.3s;
  }

  .modal-content {
    background-color: #fff;
    margin: 10% auto;
    padding: 30px;
    border-radius: 12px;
    width: 90%;
    max-width: 400px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    animation: slideDown 0.3s;
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
    line-height: 20px;
  }

  .close:hover,
  .close:focus {
    color: #000;
  }

  .otp-display {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 20px;
    border-radius: 8px;
    margin: 20px 0;
  }

  .otp-display h1 {
    font-size: 48px;
    margin: 0;
    letter-spacing: 8px;
    font-weight: bold;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideDown {
    from {
      transform: translateY(-50px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>

<%- include('../partials/footer') %>