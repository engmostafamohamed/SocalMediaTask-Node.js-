<%- include('../partials/header', { 
  title: typeof __ === 'function' ? __('auth.signup') : 'Sign Up',
  currentLang: typeof currentLang !== 'undefined' ? currentLang : 'en',
  userHandle: typeof userHandle !== 'undefined' ? userHandle : null
}) %>

<div class="main-content">
  <div class="card-center">
    <div class="card">
      <h1>üê¶ <%= typeof __ === 'function' ? __('app.name') : 'Nip' %></h1>
      <p class="tagline"><%= typeof __ === 'function' ? __('app.tagline') : 'Microblogging made simple' %></p>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>

      <form action="/auth/signup" method="POST" class="form">
        <div class="form-group">
          <label><%= typeof __ === 'function' ? __('auth.username') : 'Username' %></label>
          <input type="text" name="handle" required placeholder="e.g., trump">
        </div>

        <div class="form-group">
          <label><%= typeof __ === 'function' ? __('auth.contact') : 'Email or Phone' %></label>
          <input type="text" name="contact" required placeholder="user@example.com">
        </div>

        <div class="form-group">
          <label><%= typeof __ === 'function' ? __('auth.contactType') : 'Contact Type' %></label>
          <select name="contactType" required>
            <option value="email"><%= typeof __ === 'function' ? __('auth.email') : 'Email' %></option>
            <option value="sms"><%= typeof __ === 'function' ? __('auth.sms') : 'SMS' %></option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary">
          <%= typeof __ === 'function' ? __('auth.requestOTP') : 'Request OTP' %>
        </button>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
